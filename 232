#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <windows.h> 
#include <locale.h> 

int readSum(const char* fname) {
    FILE* f;
    
    if (fopen_s(&f, fname, "r") != 0) {
        
        fprintf(stderr, "Ошибка в функции readSum: файл %s не открыт.\n", fname);
        return -1;
    }

    int sum = 0;
    int a;

    while (fscanf_s(f, "%d", &a) == 1) {
        sum += a; 
    }

    
    fclose(f);

    
    return sum;
}


int main() {
     
    setlocale(LC_ALL, "");

    
    const char* filename = "C:\\Users\\aemikhaylov\\source\\repos\\23222\\input.txt";

    
    int totalSum = readSum(filename);

    if (totalSum != -1) {
        printf("Сумма всех чисел в файле: %d\n", totalSum);
    }
  

    return 0;
}
