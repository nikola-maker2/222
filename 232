#include <stdio.h>
#include <math.h>

void printMatrix(int** matrix, int M, int N) {
    for (int i = 0; i < M; i++) {
        for (int j = 0; j < N; j++) {
            printf("%3d ", matrix[i][j]);
        }
        printf("\n");
    }
    printf("\n");
}

int** cyclicShift(int** matrix, int N, int M, int k = 1) {
    int** cycled_matrix = new int* [N];

    for (int i = 0; i < N; i++) {
        cycled_matrix[i] = new int[M];
      
        for (int j = 0; j < M; j++) {
            cycled_matrix[i][j] = matrix[abs(i - k) % N][abs(j - k) % M];
        }
    }
    return cycled_matrix;
}

int main() {
    int M, N, k;

    printf("Vvedite razmernost` M x N: ");
    scanf_s("%d %d", &M, &N);

    int** matrix = new int*[N];

    printf("Vvedite kolichestvo sdvigov k: ");
    scanf_s("%d", &k);

   
    int num = 1;
    for (int i = 0; i < M; i++) {
        matrix[i] = new int[M];
        for (int j = 0; j < N; j++) {
            matrix[i][j] = num;
            num++;
        }
    }

    printf("Ishodnaya matrica:\n");
    printMatrix(matrix, M, N);

    int** ma = cyclicShift(matrix, M, N, k);

    printf("Matrica posle %d sdvigov:\n", k);
    printMatrix(ma, M, N);

    return 0;
}
