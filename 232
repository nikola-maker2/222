#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <wchar.h>   
#include <locale.h> 
#include <wctype.h>  

const wchar_t* digitToWordW(wchar_t digit) {
    switch (digit) {
    case L'0': return L"ноль";
    case L'1': return L"один";
    case L'2': return L"два";
    case L'3': return L"три";
    case L'4': return L"четыре";
    case L'5': return L"пять";
    case L'6': return L"шесть";
    case L'7': return L"семь";
    case L'8': return L"восемь";
    case L'9': return L"девять";
    default: return L"";
    }
}

int main() {
   
    setlocale(LC_ALL, "");

    const char* filename = "C:\\Users\\aemikhaylov\\source\\repos\\2 zadanie\\input.txt";
   
    FILE* file = fopen(filename, "r,ccs=UTF-8");

    if (file == NULL) {
        fprintf(stderr, "Ошибка: не удалось открыть файл %s\n", filename);
        return 1;
    }

    wint_t character; 
    int newSentence = 1;

   
    while ((character = fgetwc(file)) != WEOF) {
        wchar_t c = (wchar_t)character;

        
        if (newSentence && !iswspace(c)) {
            wprintf(L"\n"); 
            newSentence = 0;
        }

        if (iswdigit(c)) {
            wprintf(L"%ws", digitToWordW(c)); 
        }
        else {
            wprintf(L"%wc", c); 
            if (c == L'.' || c == L'!' || c == L'?') {
                newSentence = 1;
            }
        }
    }


    fclose(file);
    wprintf(L"\n");

    return 0;
}
